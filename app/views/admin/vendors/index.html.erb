<div class="row">
  <% if MealTime.today.try(:activated?) %>
    <%= warning_alert "用户正在订餐中，在此期间你无法删除菜单或商家，但可以添加或进行编辑" %>
  <% end %>

  <div class="span4">
    <h2>商家列表</h2>

    <table class="table table-striped table-bordered" id="vendors_table">
      <tr>
        <th>商家名称</th>
        <th>操作</th>
      </tr>

      <%= render partial: "tr_vendor", collection: @vendors, as: :vendor %>
    </table>

    <a class="btn" data-toggle="modal" href="#modal_form" >
      <i class="icon-plus-sign"></i>
      添加
    </a>

    <div class="modal hide" id="modal_form">
      <%= render "modal_form" %>
    </div>
  </div>

  <div class="span8" id="menu_items_div"></div>
</div>