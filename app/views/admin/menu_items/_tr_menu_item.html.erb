<tr id="tr_<%= dom_id(menu_item) %>">
  <td><%= best_in_place menu_item, :name, path: [:admin, menu_item] %></td>
  <td><%= best_in_place menu_item, :price, inner_class: "span1", path: [:admin, menu_item] %></td>
  <td><%= best_in_place menu_item, :serial_num, inner_class: "span1", path: [:admin, menu_item] %></td>
  <td><%= best_in_place menu_item, :category_id, type: :select, collection: @categories.map {|c| [c.id, c.name]}, path: [:admin, menu_item] %></td>
  <td>
    <% unless MealTime.today.try(:activated?) %>
      <%= link_to '删除', admin_vendor_menu_item_path(@vendor, menu_item),  data: {confirm: "你确定要删除 #{menu_item.name} 吗?"}, method: :delete, remote: true %>
    <% end %>
  </td>
</tr>
