<%= simple_form_for(@meal_time, :html => {:class => "form-horizontal"}) do |f| %>

  <div class="control-group">
    <%= f.input :vendor_ids, collection: Vendor.all, as: :check_boxes, label: "所有餐馆" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('confirm'), class: 'btn btn-primary' %>
    <%= link_to t('cancel'), meal_times_url, :class => "btn" %>
  </div>
<% end %>
