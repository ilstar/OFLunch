<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <img class="brand" src="http://openfeint.com/images/footer/of_footer_logo.png" style="padding: 0px 10px"/>
      <div class="nav-collapse">
        <%= tabs_tag builder: MenuTabBuilder, open_tabs: {class: 'nav'} do |tab| %>
          <%= tab.home t("nav.home"), root_path %>
          <%= tab.order_items t("nav.order_items"), order_items_path %>
          <% if current_user and current_user.admin? %>
          <li class="divider-vertical"></li>
          <%= tab.meal_times t("nav.mom"), meal_times_path %>
          <%= tab.balances t("nav.balances"), balances_path %>
          <%= tab.vendors "商家管理", vendors_path %>
          <% end %>
        <% end %>

        <% if current_user%>
          <ul class="nav pull-right">
            <li><%= link_to "Hi, #{current_user.identifier}", edit_user_path %></li>
            <% if not @messages.empty? %>
              <li><a id="unread-message-count" href="javascript:;"><span><%= @messages.count %></span></a></li>
            <% end %>
            <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t 'nav.account' %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('nav.user_edit'), edit_user_path %></li>
              <li><%= link_to '消费详情', bills_path %></li>
              <li><%= link_to t('nav.logout'), destroy_user_session_path, method: 'delete' %></li>
            </ul>
            </li>
          </ul>
        <% end%>
      </div>
    </div>
  </div>
</div>

<% if not @messages.empty? %>
  <div id="unread-message-content">
    <h3>通知中心</h3>
    <div>
      <ul>
        <% @messages.each do |msg| %>
          <li> <%= raw msg.content %> </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
