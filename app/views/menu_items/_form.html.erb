<%= simple_form_for [@vendor, @menu_item] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :serial_num %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '保存并继续', class: 'btn-primary' %>
    <%= link_to 'Back', vendor_menu_items_path(@vendor), class: 'btn' %>
  </div>
<% end %>
